<idea-plugin version="2">
  <id>org.avaje.ebean.enhancer</id>
  <name>EbeanORM Enhancer</name>
  <version>4.5.3</version>
  <vendor url="http://ebean-orm.github.io/" >Yevgeny Krasik, Mario Ivankovits, Rob Bygrave</vendor>

  <description><![CDATA[
      Post-compile EbeanORM enhancement
    ]]></description>

  <change-notes><![CDATA[
      <b>4.5.3</b> IDEA 13+ avaje-ebeanorm-agent version 4.5.3<br>
    ]]>
  </change-notes>

  <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <component>
      <implementation-class>org.avaje.idea.ebean.plugin.EbeanActionComponent</implementation-class>
      <interface-class>org.avaje.idea.ebean.plugin.EbeanActionComponent</interface-class>
      <!-- For configuration save in iws files -->
      <option name="workspace" value="true"/>
    </component>
  </project-components>

  <actions>
    <action class="org.avaje.idea.ebean.plugin.ToggleEbeanAction"
            text="EbeanORM Enhancement"
            description="EbeanORM enhancement - http://ebean-orm.github.io/"
            id="org.avaje.idea.ebean.plugin.ToggleEbeanAction">
      <add-to-group anchor="after" group-id="BuildMenu" relative-to-action="Compile"/>
      <add-to-group anchor="after" group-id="ProjectViewPopupMenu" relative-to-action="Compile"/>
    </action>
  </actions>

</idea-plugin>